<UserControl x:Class="EasySave_WPF.Views.ListJobsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasySave_WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="Backup Jobs" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Liste des jobs -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding BackupManager.Jobs}" 
                  SelectedItem="{Binding BackupManager.SelectedJob}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  AlternatingRowBackground="#F5F5F5" 
                  RowHeaderWidth="0" BorderThickness="1" BorderBrush="#DDDDDD">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" />
                <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="*" />
                <DataGridTextColumn Header="Target" Binding="{Binding TargetPath}" Width="*" />
                <DataGridTemplateColumn Header="Progress" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Value="{Binding Progress}" Minimum="0" Maximum="100" 
                                         Height="15" Margin="5,0" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Status" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding IsRunning, Converter={StaticResource JobStatusConverter}}" 
                                       HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Execute Selected" Command="{Binding BackupManager.ExecuteSelectedJobCommand}" 
                    Width="120" Height="30" Margin="0,0,10,0" Background="#3498DB" Foreground="White" />
            <Button Content="Execute All" Command="{Binding BackupManager.ExecuteAllJobsCommand}" 
                    Width="100" Height="30" Margin="0,0,10,0" Background="#27AE60" Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>
<UserControl x:Class="EasySave_WPF.Views.ListJobsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EasySave_WPF.Views"
             xmlns:helpers="clr-namespace:EasySave.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <helpers:BindingProxy x:Key="Proxy" Data="{Binding BackupManager.Translations}" />

        <!-- Bouton bleu stylé -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F618D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bouton vert stylé -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#27AE60" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E8449"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="{Binding Translations[ListJobs]}" TextAlignment="Center"
                   FontSize="26" FontWeight="Bold" Margin="0,0,0,20" Foreground="#16A085"/>

        <!-- DataGrid dans une carte -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10"
                BorderBrush="#D0D3D4" BorderThickness="1" SnapsToDevicePixels="True" >
            <DataGrid ItemsSource="{Binding BackupManager.Jobs}" 
                      SelectedItem="{Binding BackupManager.SelectedJob}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      AlternatingRowBackground="#ECF0F1" RowBackground="White"
                      GridLinesVisibility="None"
                      RowHeaderWidth="0" 
                      HeadersVisibility="Column"
                      FontSize="14"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40" />
                    <DataGridTextColumn Header="{Binding Data[ColumnJobName], Source={StaticResource Proxy}}" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" />
                    <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="2*" />
                    <DataGridTextColumn Header="{Binding Data[ColumnTarget], Source={StaticResource Proxy}}" Binding="{Binding TargetPath}" Width="2*" />
                    <DataGridTemplateColumn Header="{Binding Data[ColumnProgress], Source={StaticResource Proxy}}" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding Progress}" Minimum="0" Maximum="100" 
                                             Height="16" Margin="5,0" Foreground="#16A085" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="{Binding Data[ColumnStatus], Source={StaticResource Proxy}}" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IsRunning, Converter={StaticResource JobStatusConverter}}" 
                                           HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#34495E"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="▶" Command="{Binding ExecuteCommand}"
                                        ToolTip="Execute" Width="30" Height="24" Margin="2"
                                        Background="#27AE60" Foreground="White"/>
                                    <Button Content="⏸" Command="{Binding PauseCommand}"
                                        ToolTip="Pause/Resume" Width="30" Height="24" Margin="2"
                                        Background="#F39C12" Foreground="White"/>
                                    <Button Content="⏹" Command="{Binding StopCommand}"
                                        ToolTip="Stop" Width="30" Height="24" Margin="2"
                                        Background="#C0392B" Foreground="White"/>
                                    <Button Content="✏️"
                                        Command="{Binding DataContext.BackupManager.RequestEditJobCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Edit" Width="30" Height="24" Margin="2"
                                        Background="#3498DB" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{Binding Translations[ButtonExSelect]}" Command="{Binding BackupManager.ExecuteSelectedJobCommand}" 
                    Style="{StaticResource PrimaryButtonStyle}" Width="125"/>
            <Button Content="{Binding Translations[ButtonExAll]}" Command="{Binding BackupManager.ExecuteAllJobsCommand}" 
                    Style="{StaticResource SuccessButtonStyle}"/>
        </StackPanel>

        <Border Grid.Row="0" Grid.RowSpan="3" Background="#80000000"
                Visibility="{Binding BackupManager.ShowEditDialog, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" Width="500" Padding="20" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Edit Backup Job" FontWeight="Bold" FontSize="18"/>
                    <StackPanel Grid.Row="1" Margin="0,20">
                        <TextBlock Text="Job Name:" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding BackupManager.JobToEdit.Name, Mode=TwoWay}"
                                 Margin="0,0,0,10" Padding="5"/>
                        <TextBlock Text="Source Path:" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding BackupManager.JobToEdit.SourcePath, Mode=TwoWay}"
                                     Margin="0,0,5,10" Padding="5" Grid.Column="0"/>
                            <Button Content="Browse..." Command="{Binding BackupManager.BrowseSourceCommand}"
                                    CommandParameter="{Binding BackupManager.JobToEdit}"
                                    Width="80" Margin="0,0,0,10" Grid.Column="1"/>
                        </Grid>
                        <TextBlock Text="Target Path:" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding BackupManager.JobToEdit.TargetPath, Mode=TwoWay}"
                                     Margin="0,0,5,10" Padding="5" Grid.Column="0"/>
                            <Button Content="Browse..." Command="{Binding BackupManager.BrowseTargetCommand}"
                                    CommandParameter="{Binding BackupManager.JobToEdit}"
                                    Width="80" Margin="0,0,0,10" Grid.Column="1"/>
                        </Grid>
                        <TextBlock Text="Backup Type:" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Complete"
                                         IsChecked="{Binding BackupManager.JobToEdit.Type, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Complete}"
                                         Margin="0,0,20,0" VerticalContentAlignment="Center"/>
                            <RadioButton Content="Differential"
                                         IsChecked="{Binding BackupManager.JobToEdit.Type, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Differential}"
                                         VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding BackupManager.CancelEditCommand}"
                                Width="100" Height="30" Margin="0,0,10,0"/>
                        <Button Content="Save" Command="{Binding BackupManager.ConfirmEditCommand}"
                                Width="100" Height="30" Background="#27AE60" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

    </Grid>
</UserControl>

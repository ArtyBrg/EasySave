<Window x:Class="EasySave_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_WPF"
        xmlns:views="clr-namespace:EasySave_WPF.Views"
        mc:Ignorable="d"
        Title="EasySave - Backup Manager" Height="600" Width="900">

    <!-- 🔧 Animation du Popup -->
    <Window.Resources>
        <Style x:Key="PopupFadeInStyle" TargetType="Border">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" From="0.9" To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" From="0.9" To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Barre du haut -->
        <Grid Grid.Row="0" Background="#2C3E50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Menu de navigation -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="Home" Command="{Binding NavigateCommand}" 
                        CommandParameter="Home" Height="40" Width="80" Margin="5"
                        Background="Transparent" Foreground="White" BorderThickness="0" />
                <Button Content="Create Job" Command="{Binding NavigateCommand}" 
                        CommandParameter="CreateJob" Height="40" Width="80" Margin="5"
                        Background="Transparent" Foreground="White" BorderThickness="0" />
                <Button Content="Jobs List" Command="{Binding NavigateCommand}" 
                        CommandParameter="JobsList" Height="40" Width="80" Margin="5"
                        Background="Transparent" Foreground="White" BorderThickness="0" />
                <Button Content="Logs" Command="{Binding NavigateCommand}" 
                        CommandParameter="Logs" Height="40" Width="80" Margin="5"
                        Background="Transparent" Foreground="White" BorderThickness="0" />
                <Button Content="Settings" Command="{Binding NavigateCommand}" 
                        CommandParameter="Settings" Height="40" Width="80" Margin="5"
                        Background="Transparent" Foreground="White" BorderThickness="0"/>
            </StackPanel>

            <!-- Paramètres -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                <Button Width="40" Height="40" Margin="0,0,5,0" Click="SettingsButton_Click" Name="SettingsButton"
                        Background="Transparent" BorderThickness="0" ToolTip="Settings">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16" Foreground="#1ABC9C"/>
                </Button>

                <!-- Popup paramètres -->
                <Grid>
                    <Popup Name="SettingsPopup"
                           PlacementTarget="{Binding ElementName=SettingsButton}"
                           Placement="Bottom"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           PopupAnimation="Fade">
                        <Border Style="{StaticResource PopupFadeInStyle}"
                                Background="#2C3E50" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                            <StackPanel>
                                <!-- Langue -->
                                <TextBlock Text="Langue" FontWeight="Bold" Margin="0,0,0,5" Foreground="#1ABC9C"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <Button Content="EN" Command="{Binding SetLanguageCommand}" CommandParameter="EN" 
                                            Height="30" Width="40" Margin="5"
                                            Background="{Binding CurrentLanguage, Converter={StaticResource LanguageButtonColorConverter}, ConverterParameter=EN}"/>
                                    <Button Content="FR" Command="{Binding SetLanguageCommand}" CommandParameter="FR" 
                                            Height="30" Width="40" Margin="5"
                                            Background="{Binding CurrentLanguage, Converter={StaticResource LanguageButtonColorConverter}, ConverterParameter=FR}"/>
                                </StackPanel>

                                <!-- Format de log -->
                                <TextBlock Text="Format de logs" FontWeight="Bold" Margin="0,0,0,5" Foreground="#1ABC9C"/>
                                <ComboBox SelectedItem="{Binding SelectedLogFormat, Mode=TwoWay}" Width="90" Margin="0,0,0,10">
                                    <ComboBoxItem Content="JSON"/>
                                    <ComboBoxItem Content="XML"/>
                                </ComboBox>

                                <!-- Apply -->
                                <Button Content="Apply" Width="80" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Contenu principal - changement de vue via ContentControl -->
        <ContentControl Grid.Row="1" x:Name="MainContent">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedViewName}" Value="Home">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <views:HomeView />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding SelectedViewName}" Value="CreateJob">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <views:CreateJobView />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding SelectedViewName}" Value="JobsList">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <views:ListJobsView />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding SelectedViewName}" Value="Logs">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <views:LogsView />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding SelectedViewName}" Value="Settings">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <views:SettingsView />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <!-- Barre d'état -->
        <StatusBar Grid.Row="2" Background="#34495E">
            <StatusBarItem>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
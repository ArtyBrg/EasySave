<UserControl x:Class="EasySave_WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EasySave_WPF.Views"
             xmlns:converters="clr-namespace:EasySave_WPF.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <converters:LanguageButtonColorConverter x:Key="LanguageButtonColorConverter"/>
        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="LanguageButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" TargetName="border" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" TargetName="border" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E8E41"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#367D39"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25">
                <TextBlock Text="Paramètres" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2E7D32"/>

                <!-- Langue -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Langue" Style="{StaticResource SettingsTitleStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Sélectionnez votre langue :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Button Content="Français" Command="{Binding SetLanguageCommand}" CommandParameter="FR" 
                                Style="{StaticResource LanguageButtonStyle}"
                                Background="{Binding CurrentLanguage, Converter={StaticResource LanguageButtonColorConverter}, ConverterParameter=FR}"
                                BorderBrush="#DDDDDD"/>
                            <Button Content="English" Command="{Binding SetLanguageCommand}" CommandParameter="EN" 
                                Style="{StaticResource LanguageButtonStyle}"
                                Background="{Binding CurrentLanguage, Converter={StaticResource LanguageButtonColorConverter}, ConverterParameter=EN}"
                                BorderBrush="#DDDDDD"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Format des logs -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Format des logs" Style="{StaticResource SettingsTitleStyle}"/>
                        <TextBlock Text="Sélectionnez le format des fichiers de logs :" Margin="0,0,0,5"/>
                        <ComboBox SelectedItem="{Binding SelectedLogFormat, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                Style="{StaticResource SettingsComboBoxStyle}" ItemsSource="{Binding LogFormats}" />
                    </StackPanel>
                </Border>

                <!-- Extensions à crypter -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Cryptage des fichiers" Style="{StaticResource SettingsTitleStyle}"/>
                        <TextBlock Text="Extensions de fichiers à crypter lors des sauvegardes :" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding FileExtensionToCrypt, Mode=TwoWay}" 
                                    Height="32" Padding="8,5" Margin="0,5,10,5"
                                    BorderBrush="#DDDDDD"/>
                            <Button Grid.Column="1" Content="Ajouter" Width="80" Height="32"
                                    Command="{Binding AddExtensionCommand}"
                                    Background="#2196F3" Foreground="White" BorderThickness="0"/>
                        </Grid>
                        <ListView ItemsSource="{Binding ExtensionsToCrypt}" 
                                Height="100" Margin="0,5,0,0" BorderBrush="#DDDDDD" BorderThickness="1">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" Content="X" Width="24" Height="24"
                                                Command="{Binding DataContext.RemoveExtensionCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Background="#F44336" Foreground="White" BorderThickness="0"
                                                Margin="5,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Logiciel métier -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Logiciel métier" Style="{StaticResource SettingsTitleStyle}"/>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                            Définissez un logiciel métier qui, lorsqu'il est en cours d'exécution, empêchera le lancement de nouvelles sauvegardes.
                        </TextBlock>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox ItemsSource="{Binding AvailableProcesses}"
                                    SelectedItem="{Binding SelectedBusinessSoftware, Mode=TwoWay}"
                                    DisplayMemberPath="Name"
                                    Style="{StaticResource SettingsComboBoxStyle}"
                                    Margin="0,5,10,5"/>

                            <Button Grid.Column="1" Content="Parcourir..." Width="100" Height="32"
                                    Command="{Binding BrowseBusinessSoftwareCommand}"
                                    Background="#2196F3" Foreground="White" BorderThickness="0"
                                    Margin="0,5,10,5"/>

                            <Button Grid.Column="2" Content="Utiliser Calculatrice" Width="140" Height="32"
                                    Command="{Binding UseCalculatorCommand}"
                                    Background="#673AB7" Foreground="White" BorderThickness="0"
                                    Margin="0,5,0,5"/>
                        </Grid>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Logiciel métier sélectionné :" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrentBusinessSoftware}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Bouton d'application -->
                <Button Content="Appliquer les changements" 
                        Command="{Binding ApplySettingsCommand}"
                        Style="{StaticResource SettingsButtonStyle}"
                        HorizontalAlignment="Right"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>